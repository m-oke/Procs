<% for role in User::ROLES %>
  <% if role == :root then next end %>
  <%= check_box_tag "user[roles][#{role}]", role, @object.roles.include?(role), {:name => "user[roles][]", :disabled => (role == :student), :checked => (role == :student)}%>
  <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
<% end %>
<%= hidden_field_tag "user[roles][]", "student" %>
