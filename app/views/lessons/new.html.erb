<h1>クラス作成</h1>
<%= form_for @lesson do |f| %>
    <p>
      <%= f.label :name , 'クラス名'%><br>
      <%= f.text_field :name , :col => 80%>
    </p>



    <p>
      <%= f.label :description , '説明'%><br>
      <%= f.text_area :description , :rows => 10 , :cols => 80%>
    <p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
