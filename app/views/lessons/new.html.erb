<h1>クラス作成</h1>
<%= form_for @lesson do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :lesson_code %><br>
      <%= f.text_field :lesson_code %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    <p>

    <p>
      <%= f.submit %>
    </p>
<% end %>