<h2>学生一覧</h2>
<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <tr>
      <th>学籍番号</th>
      <th>氏名</th>
      <th>成績</th>
    </tr>
    <% @students.each do |student| %>
        <% @right_answer = 0 %>
        <tr>
          <td><%= link_to student.student_number , student_lessons_path( :lesson_id => params[:lesson_id] , :student_id => student.id),
                                                  :remote => true  %></td>
          <td><%= student.name %></td>
          <td>
            <% @lesson_questions.each do |lesson_question| %>
              <% @accept_count = Answer.records(:student_id => student.id, :lesson_id => params[:lesson_id]) %>
            <% end %>
            <%= "#{@accept_count}/#{@lesson_questions_count}"  %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
