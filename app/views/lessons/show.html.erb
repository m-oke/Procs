<div id ="proftab">
  <ul class="nav nav-tabs">
    <li role="presentation" class="active" id = "home_tab"><a href="#tab1" data-toggle="tab">ホーム</a></li>

    <li role="presentation" id = "questions_tab" ><%= link_to  "問題",  lesson_questions_path(:lesson_id =>@lesson.id ),
                                         :remote => true , :data => { :toggle=>"tab"} %></li>
    <% if @is_teacher %>
        <li role="presentation" id = "students_tab"><%= link_to  "学生",  students_lessons_path(:lesson_id =>@lesson.id ),
                                             :remote => true , :data => { :toggle=>"tab"} %></li>
    <% end %>
  </ul>
</div>
<div class="tab-content">
  <div class="tab-pane active" id="tab1">
    <h1><%= @lesson.name %></h1>
    <p>講義の説明: <%= @lesson.description %></p>
    <p>教員:
      <% @teachers.each_with_index do |teacher, i| %>
          <%= teacher.name %>
          <% if i + 1 < @teachers.count %>
              ,
          <% end %>
      <% end %>
    </p>
    <p>授業コード: <%= @lesson.lesson_code %></p>
  </div>
  <div class="tab-pane" id="tab2">
  </div>
</div>
